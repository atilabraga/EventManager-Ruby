<%= form_for(@event) do |f| %>
  <div class="field">
    <%= f.label "Nome" %></br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Descrição curta" %></br>
    <%= f.text_area :short_description, rows: 2 %>
  </div>
  <div class="field">
    <%= f.label "Descrição completa" %></br>
    <%= f.text_area :complete_description, rows: 8 %>
  </div>
  <div class="actions">
    <%= f.submit "Criar" %>
  </div>
<% end %>
